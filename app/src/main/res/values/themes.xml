<resources>
    <!-- Base application theme. -->
    <style name="Theme.VideoGameList" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_gunmetal</item>
        <item name="colorOnPrimary">@color/ucla_blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tart_orange</item>
        <item name="colorSecondaryVariant">@color/dark_gunmetal</item>
        <item name="colorOnSecondary">@color/chinese_black</item>
        <item name="android:background">@color/chinese_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
